{
  "name": "tan-bot",
  "version": "1.0.0",
  "description": "Discord Bot to insult Tan, that mfer",
  "author": "Steven Silvestri <steven.m.silvestri@gmail.com>",
  "private": true,
  "license": "UNLICENSED",
  "scripts": {
    "build": "tsc -p tsconfig.build.json",
    "format": "prettier --write \"src/**/*.ts\"",
    "start": "ts-node -r tsconfig-paths/register src/main.ts",
    "start:dev": "nodemon",
    "start:debug": "nodemon --config nodemon-debug.json",
    "prestart:prod": "rimraf dist && yarn build",
    "postinstall": "yarn build",
    "start:prod": "pm2-runtime start ecosystem.config.js --env production",
    "lint": "tslint -p tsconfig.json -c tslint.json",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json"
  },
  "dependencies": {
    "@nestjs/common": "^6.3.1",
    "@nestjs/core": "^6.3.1",
    "@nestjs/microservices": "^6.3.1",
    "cron": "^1.6.0",
    "discord.js": "^11.4.2",
    "dotenv": "^8.0.0",
    "insults": "^0.1.3",
    "joi": "^14.3.1",
    "moment": "^2.24.0",
    "pm2": "^3.2.9",
    "reflect-metadata": "^0.1.12",
    "rimraf": "^2.6.3",
    "rxjs": "^6.2.2",
    "typescript": "^3.0.1"
  },
  "devDependencies": {
    "@nestjs/testing": "^6.3.1",
    "@types/cron": "^1.6.0",
    "@types/dotenv": "^6.1.0",
    "@types/express": "^4.16.0",
    "@types/jest": "^24.0.13",
    "@types/joi": "^14.3.1",
    "@types/moment": "^2.13.0",
    "@types/node": "^12.0.8",
    "@types/supertest": "^2.0.5",
    "commitizen": "^3.0.5",
    "cz-conventional-changelog": "^2.1.0",
    "jest": "^24.8.0",
    "nodemon": "^1.18.3",
    "prettier": "^1.16.3",
    "standard-version": "^6.0.1",
    "supertest": "^4.0.2",
    "ts-jest": "^24.0.2",
    "ts-loader": "^6.0.2",
    "ts-node": "^8.2.0",
    "tsconfig-paths": "^3.5.0",
    "tslint": "5.17.0",
    "tslint-config-airbnb": "^5.11.1",
    "tslint-config-prettier": "^1.17.0",
    "tslint-plugin-prettier": "^2.0.1"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": "src",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "../coverage",
    "testEnvironment": "node"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "engines": {
    "node": "10.x"
  }
}
